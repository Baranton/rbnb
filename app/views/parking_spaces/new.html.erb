    <div class="container">
      <div class="row">
        <div class="holder">
          <div class="content-card" data-aos="fade-down" data-aos-delay="750">
            <div class="content-card-content">
              <h2>Add a new parking space</h2>

              <%= simple_form_for @parking_space do |f| %>
                <%= f.input :address %>
                <%= f.input :postcode %>
                <%= f.input :city %>
                <%= f.input :country, as: :text %>
                <%= f.input :latitude %>
                <%= f.input :longitude %>
                <%= f.input :category, as: :text %>
                <%= f.input :availability %>
                <%= f.input :size %>
                <%= f.input :price_per_hour %>

                <%= f.submit "Add parking space", class: "btn btn-primary" %>
              <% end %>
           </div>
          </div>
        </div>
      </div>
    </div>

